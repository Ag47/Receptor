<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.receptor"
    android:versionCode="9"
    android:versionName="2.6">

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="com.google.android.gms.vision.DEPENDENCIES"
            android:value="face" />

        <activity
            android:name="com.receptor.MidiSheetMusicActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.receptor.ChooseSongActivity"></activity>
        <activity android:name="com.receptor.FileBrowserActivity"></activity>
        <activity android:name="com.receptor.AllSongsActivity"></activity>
        <activity android:name="com.receptor.RecentSongsActivity"></activity>
        <activity android:name="com.receptor.SettingsActivity"></activity>
        <activity android:name="com.receptor.HelpActivity"></activity>
        <activity
            android:name="com.receptor.SheetMusicActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data
                    android:host="*"
                    android:mimeType="*/*"
                    android:pathPattern=".*\\.mid"
                    android:scheme="file" />
            </intent-filter>
        </activity>
    </application>
</manifest>
